extends ../main

block personalStyle
	link(rel="stylesheet", type="text/css", href="css/stolbiki.css")

block title
	| Столбики парковочные

block main-content	
	nav.bread
		ul.bread__list
			- var items = {'index.html': 'Главная', '#': 'Столбики'}
			each val, index in items
				li(class="bread__item" + ((val=== 'Столбики') ? ' active' : '' ) )
					a(href= index, class="bread__link")= val

	section.section
		header.section__header
			h2.section__header-name Столбики
		ul.products__list.products__list-rows
			li.products__item
				.products__item-inner
					.products__left
						.products__slideshow
							.products__slideshow-block
								a(href="#").products__slideshow-display
									img(src="http://lorempixel.com/200/200/technics/6", alt="").products__slideshow-img
							.products__article
								.products__article-word Артикул
								.products__article-num 189998
						.products__desc
							.products__desc-title Sumsung FT-9 GALAXY S
							ul.products__desc-options 
								-var options = {'Тип SIM-карты' : 'Micro-SIM', 'Количество SIM-карт' : '1', 'Цвет' : 'Белый', 'ОС' : 'Android', 'Связь 3G' : 'Есть', '4G(LTE)' : 'Нет', 'GPS-модуль' : 'Есть'}
								- var index = 0
								- for (item in options)
									li(class="products__option-item " + ((index++ % 2) ? '' : 'products__option-item-odd') )
										.products__options-key= item
										.products__options-value= options[item]
							div(data-rating="4").products__rating
					.products__right
						.products__info
							.products__price 11 390
								i.rub
						.products__info-button
							a(href="#").products__buy-btn В корзину
							.products__availability В наличии
