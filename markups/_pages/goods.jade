extends ../main

block personalStyle
	link(rel="stylesheet", type="text/css", href="css/index.css")

block title
	| Товары

block main-content
	section.section.goods#goods
		header.section__header
			h2.section__header-name Категории товаров
		ul.list.goods__list
			- var goods = {'Stolbiki': 'Столбики','Barieri': 'Барьеры','Conusi': 'Конусы', 'Polysferi': 'Полусферы', 'Vazoni': 'Вазоны Бетонные', 'Urni': 'Урны Бетонные','Skameiki': 'Уличные Скамейки', 'Znaki': 'Дорожные Знаки', 'Setki': 'СеткиПластиковые', 'Lenti': 'Лента Сигнальная', 'Shlagbaumi': 'Автоматические Шлагбаумы', 'Turniketi': 'Турникеты', 'Privodi': 'Приводы для Ворот', 'Policeiski': 'Лежачий Полицейский'}
			each val, index in goods
				li.list__item.goods__item
					a(class="goods__link", href= index + '.html')
						wrapper.goods__img-wrapper
							img(src='img/goods/' + index + '.jpg', class="goods__img", alt= val)
						span.goods__text= val

block personalScript
	script(src="js/index.js")

